# Production Environment Variables
# Copy this file to .env and update with your production values

# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://postgres:your-secure-postgres-password-here@postgres:5432/excelmind_crm?schema=public

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this-in-production
JWT_EXPIRES_IN=7d

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
MOCK_AI=false

# Application Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_WS_URL=https://api.your-domain.com
